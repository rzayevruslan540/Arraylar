#include <iostream>
using namespace std;

void mergeAtK(int A[], int nA, int B[], int nB, int k, int C[]){
    int idx = 0;

    for(int i=0;i<=k;i++)
        C[idx++] = A[i];

    for(int i=0;i<nB;i++)
        C[idx++] = B[i];

    for(int i=k+1;i<nA;i++)
        C[idx++] = A[i];
}

int main(){
    int A[5]={1,2,3,4,5};
    int B[3]={9,9,9};
    int C[8];

    mergeAtK(A,5,B,3,2,C);

    for(int i=0;i<8;i++) cout<<C[i]<<" ";
}
