#include <iostream>
using namespace std;

int zeroDistance(int a[], int n){
    int first = -1, last = -1;

    for(int i=0;i<n;i++){
        if(a[i]==0){
            if(first == -1) first = i;
            last = i;
        }
    }
    if(first == -1 || last == -1) return -1;

    return last - first;
}

int main(){
    int a[] = {5,0,3,7,0,9};
    int n = 6;
    cout << zeroDistance(a,n);
}
