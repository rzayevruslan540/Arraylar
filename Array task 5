#include <iostream>
using namespace std;

void swapMax(int A[], int B[], int n){
    int maxA = 0, maxB = 0;

    for(int i=1;i<n;i++){
        if(A[i] > A[maxA]) maxA = i;
        if(B[i] > B[maxB]) maxB = i;
    }

    int temp = A[maxA];
    A[maxA] = B[maxB];
    B[maxB] = temp;
}

int main(){
    int A[5]={1,9,2,7,3};
    int B[5]={4,6,8,1,5};

    swapMax(A,B,5);

    for(int i=0;i<5;i++) cout<<A[i]<<" "; cout<<endl;
    for(int i=0;i<5;i++) cout<<B[i]<<" ";
}
